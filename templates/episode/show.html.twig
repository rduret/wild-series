{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
            {% if episode.comments is not empty %}
            <tr>
                <th>Avis</th>
                <td>
                {% for comment in episode.comments %}
                <div>
                    <strong><p>{{ comment.rate }}/10</p></strong>
                    <p>{{ comment.comment }}</p>
                </div>
                <hr>
                {% endfor %}
                </td>
            </tr>
            {% endif %}
        </tbody>
    </table>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <p>Email: {{ app.user.email }}</p>
    {{ form_start(form) }}
    {{ form_widget(form) }}
        {# <button class="btn">{{ button_label|default('Ajouter commentaire') }}</button> #}
    {{ form_end(form) }}
    {% endif %}

    <a href="{{ path('episode_index') }}">back to list</a>

    <a href="{{ path('episode_edit', {'slug': episode.slug}) }}">edit</a>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
